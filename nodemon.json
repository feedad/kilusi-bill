{
  "watch": [
    "app.js",
    "config/**/*.js",
    "routes/**/*.js",
    "middleware/**/*.js"
  ],
  "ignore": [
    "logs/**/*",
    "backups/**/*",
    "whatsapp-session/**/*",
    "node_modules/**/*",
    "public/**/*",
    "views/**/*.html",
    "*.md",
    "*.json"
  ],
  "ext": "js",
  "delay": 2000,
  "verbose": true,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  }
}
