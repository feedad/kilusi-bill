# ===========================================
# FreeRADIUS Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# ===========================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=radius
DB_USER=radius
DB_PASSWORD=radius1234

# RADIUS Configuration
RADIUS_SECRET=testing123
AUTH_PORT=1812
ACCT_PORT=1813
ADMIN_PORT=18120

# PgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@kilusi.com
PGADMIN_PASSWORD=admin123

# Redis Configuration (Optional)
REDIS_PASSWORD=redis1234

# Network Configuration
# Set to the Docker network subnet if using Docker
DOCKER_SUBNET=172.21.0.0/16

# Security Configuration
# Generate secure secrets for production
# openssl rand -hex 16
SECURE_RADIUS_SECRET=$(openssl rand -hex 16)
SECURE_DB_PASSWORD=$(openssl rand -hex 16)

# Logging Configuration
LOG_LEVEL=info
ENABLE_SQL_TRACE=false

# Performance Configuration
MAX_SQL_CONNECTIONS=10
CONNECTION_TIMEOUT=5

# Features
ENABLE_POSTAUTH_LOGGING=true
ENABLE_ACCOUNTING=true
ENABLE_SESSION_TRACKING=true