<!DOCTYPE html>
<html lang="id" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice Management | Admin Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/responsive-admin.css">
  <link href="/css/dark-theme.css" rel="stylesheet">
  <link href="/css/theme-unify.css" rel="stylesheet">
  <link href="/css/dark-theme.css" rel="stylesheet">
  <style>
    body {
      background-color: #0d1117;
      color: #c9d1d9;
    }
    .card {
      background-color: #161b22;
      border: 1px solid #30363d;
    }
    .card-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
    }
    .table {
      color: #c9d1d9;
    }
    .table thead th {
      background-color: #21262d;
      border-color: #30363d;
      color: #c9d1d9;
    }
    .table tbody tr {
      background-color: #161b22;
      border-color: #30363d;
    }
    .table tbody tr:hover {
      background-color: #1c2128;
    }
    .btn-action {
      padding: 0.25rem 0.5rem;
      font-size: 0.875rem;
    }
    #invoicesTable th:nth-child(5),
    #invoicesTable td:nth-child(5) { text-align: right; }
    #invoicesTable th:nth-child(8),
    #invoicesTable td:nth-child(8) { text-align: center; }
    #invoicesTable { width: 100% !important; }
    
    /* DataTables dark theme */
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_paginate {
      color: #c9d1d9;
    }
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      color: #c9d1d9 !important;
    }
    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
      background: #1c2128;
      border-color: #30363d;
    }
  </style>
</head>
<body>
  <%- include('partials/admin-responsive-sidebar') %>

  <div class="main-content">
    <div class="container-fluid">
      <div class="row mb-3">
        <div class="col-12">
          <h1 class="h3">
            <i class="bi bi-receipt"></i> Manajemen Tagihan
          </h1>
          <p class="text-muted">Kelola invoice pelanggan dan pembayaran</p>
        </div>
      </div>

      <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle"></i> <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="bi bi-exclamation-triangle"></i> <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-receipt"></i> Daftar Tagihan</h5>
            <form method="POST" action="/admin/billing/generate-monthly-invoices" class="d-inline">
              <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Generate tagihan bulanan untuk semua pelanggan aktif?')">
                <i class="bi bi-calendar"></i> Generate Tagihan Bulanan
              </button>
            </form>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover" id="invoicesTable">
              <thead>
                <tr>
                  <th class="text-start">No. Tagihan</th>
                  <th class="text-start">Pelanggan</th>
                  <th class="text-start">No. HP</th>
                  <th class="text-start">Paket</th>
                  <th class="text-end">Jumlah</th>
                  <th class="text-start">Jatuh Tempo</th>
                  <th class="text-start">Status</th>
                  <th class="text-center">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <!-- Data will be loaded by DataTables -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    let invoicesTable;

    $(document).ready(function() {
      // Initialize DataTable with server-side processing
      invoicesTable = $('#invoicesTable').DataTable({
        processing: true,
        serverSide: true,
        ajax: {
          url: '/admin/billing/api/invoices',
          dataSrc: 'data'
        },
        order: [[0, 'desc']], // Sort by invoice number desc
        autoWidth: false,
        columns: [
          { data: 'invoice_number', className: 'text-start' },
          { data: 'customer_name', className: 'text-start', render: (v) => v || '-' },
          { data: 'customer_phone', className: 'text-start' },
          { data: 'package_name', className: 'text-start' },
          { data: 'amount', className: 'text-end', render: (v) => 'Rp ' + parseFloat(v).toLocaleString('id-ID') },
          { data: 'due_date', className: 'text-start', render: (v, t, row) => {
            const dueDate = new Date(v);
            const isOverdue = dueDate < new Date() && row.status === 'unpaid';
            const dateStr = dueDate.toLocaleDateString('id-ID');
            return isOverdue ? `<span class="text-danger fw-bold">${dateStr}</span>` : dateStr;
          }},
          { data: 'status', className: 'text-start', render: (v, t, row) => {
            if (v === 'paid') return '<span class="badge bg-success">Lunas</span>';
            if (new Date(row.due_date) < new Date()) return '<span class="badge bg-danger">Terlambat</span>';
            return '<span class="badge bg-warning">Belum Lunas</span>';
          }},
          { data: null, orderable: false, className: 'text-center', render: (d, t, row) => {
            if (row.status === 'unpaid') {
              return `
                <form method="POST" action="/admin/billing/invoices/mark-paid/${row.id}" class="d-inline">
                  <button type="submit" class="btn btn-success btn-action" onclick="return confirm('Tandai tagihan ini sebagai lunas?')">
                    <i class="bi bi-check"></i> Lunas
                  </button>
                </form>
                <form method="POST" action="/admin/billing/customers/unisolir" class="d-inline">
                  <input type="hidden" name="phone" value="${row.customer_phone}">
                  <button type="submit" class="btn btn-secondary btn-action" onclick="return confirm('Unisolir pelanggan ini tanpa pelunasan?')">
                    <i class="bi bi-unlock"></i> Unisolir
                  </button>
                </form>
              `;
            } else {
              return '<span class="text-muted">Sudah Lunas</span>';
            }
          }}
        ],
        language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/id.json' }
      });

      // Auto-hide alerts
      setTimeout(function() {
        $('.alert').fadeOut();
      }, 4000);
    });
  </script>
</body>
</html>
