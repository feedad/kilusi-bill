    <script>
        // Handle mobile sidebar
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        
        if (sidebarToggle && sidebar) {
            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('show');
            });
            
            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                const isClickInside = sidebar.contains(event.target) || sidebarToggle.contains(event.target);
                if (!isClickInside && sidebar.classList.contains('show')) {
                    sidebar.classList.remove('show');
                }
            });
        }

        // Toggle payment gateway fields based on provider selection
        const providerSelect = document.getElementById('payment_gateway_provider');
        const genericFields = document.getElementById('generic_payment_fields');
        const tripayFields = document.getElementById('tripay_payment_fields');

        function togglePaymentFields() {
            const provider = providerSelect.value;
            
            if (provider === 'tripay') {
                genericFields.style.display = 'none';
                tripayFields.style.display = 'block';
            } else if (provider === '' || provider === 'doku') {
                genericFields.style.display = 'none';
                tripayFields.style.display = 'none';
            } else {
                genericFields.style.display = 'block';
                tripayFields.style.display = 'none';
            }
        }

        // Initialize on page load
        if (providerSelect) {
            togglePaymentFields();
            providerSelect.addEventListener('change', togglePaymentFields);
                }

                // App Mode selector handler
                (function(){
                    const appModeSelect = document.getElementById('appModeSelect');
                    if (!appModeSelect) return;
                    const descDiv = document.getElementById('modeDescription');
                    appModeSelect.addEventListener('change', function(){
                        const mode = this.value;
                        if (mode === 'radius') {
                            descDiv.innerHTML = '<strong>Mode RADIUS:</strong> Aplikasi menggunakan RADIUS server untuk autentikasi PPPoE. Sidebar menampilkan menu RADIUS dan menyembunyikan MikroTik API. Cocok untuk multi-NAS.';
                        } else {
                            descDiv.innerHTML = '<strong>Mode API:</strong> Aplikasi berkomunikasi langsung dengan MikroTik RouterOS API. Sidebar menampilkan menu MikroTik. Cocok untuk single router/kontrol penuh.';
                        }
                    });
                })();
    </script>
