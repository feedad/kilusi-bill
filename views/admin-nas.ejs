<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NAS Server Management - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/responsive-admin.css">
    <link href="/css/dark-theme.css" rel="stylesheet">
    <link href="/css/theme-unify.css" rel="stylesheet">
    <link href="/css/widgets.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/admin-responsive-sidebar', { page: 'nas', settings: settings }) %>

    <div class="content main-content">
        <div class="container-fluid p-4">
            <!-- Header Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h2><i class="fas fa-server text-primary"></i> NAS Server Management</h2>
                    <p class="text-muted">Kelola server RADIUS NAS untuk autentikasi PPPoE</p>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="stats-card radius-total">
                        <div class="stats-icon">
                            <i class="fas fa-server"></i>
                        </div>
                        <div class="stats-info">
                            <div class="stats-label">Total NAS Server</div>
                            <div class="stats-value"><%= nasServers ? nasServers.length : 0 %></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card radius-active">
                        <div class="stats-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stats-info">
                            <div class="stats-label">Server Aktif</div>
                            <div class="stats-value"><%= nasServers ? nasServers.filter(n => n.is_active).length : 0 %></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card radius-inactive">
                        <div class="stats-icon">
                            <i class="fas fa-times-circle"></i>
                        </div>
                        <div class="stats-info">
                            <div class="stats-label">Server Nonaktif</div>
                            <div class="stats-value"><%= nasServers ? nasServers.filter(n => !n.is_active).length : 0 %></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-end mb-3">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNasModal">
                    <i class="fas fa-plus"></i> Tambah NAS Server
                </button>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Host</th>
                                    <th>Secret</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (nasServers && nasServers.length > 0) { %>
                                    <% nasServers.forEach(nas => { %>
                                        <tr>
                                            <td><%= nas.id %></td>
                                            <td><strong><%= nas.name %></strong></td>
                                            <td><%= nas.type %></td>
                                            <td><code><%= nas.host %></code></td>
                                            <td><code>****</code></td>
                                            <td><%= nas.description || '-' %></td>
                                            <td>
                                                <% if (nas.is_active) { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Inactive</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick='editNas(<%- JSON.stringify(nas) %>)'>
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm btn-<%= nas.is_active ? 'warning' : 'success' %>" onclick="toggleNas(<%= nas.id %>)">
                                                    <i class="fas fa-power-off"></i>
                                                </button>
                                                <form action="/admin/nas/<%= nas.id %>/delete" method="POST" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this NAS server?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8" class="text-center">No NAS servers configured</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add NAS Modal -->
    <div class="modal fade" id="addNasModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/admin/nas/add" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title">Add NAS Server</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Name *</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type *</label>
                            <select class="form-select" name="type" required>
                                <option value="mikrotik">Mikrotik</option>
                                <option value="cisco">Cisco</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Host/IP *</label>
                            <input type="text" class="form-control" name="host" placeholder="192.168.1.1" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">RADIUS Secret *</label>
                            <input type="text" class="form-control" name="secret" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="2"></textarea>
                        </div>
                        <hr/>
                        <div class="mb-3">
                            <label class="form-label">SNMP Community</label>
                            <input type="text" class="form-control" name="snmp_community" placeholder="public">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">SNMP Version</label>
                            <select class="form-select" name="snmp_version">
                                <option value="1">v1</option>
                                <option value="2c" selected>v2c</option>
                                <option value="3">v3</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">SNMP Port</label>
                            <input type="number" class="form-control" name="snmp_port" value="161">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add NAS</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit NAS Modal -->
    <div class="modal fade" id="editNasModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editNasForm" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit NAS Server</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Name *</label>
                            <input type="text" class="form-control" name="name" id="editName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type *</label>
                            <select class="form-select" name="type" id="editType" required>
                                <option value="mikrotik">Mikrotik</option>
                                <option value="cisco">Cisco</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Host/IP *</label>
                            <input type="text" class="form-control" name="host" id="editHost" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">RADIUS Secret *</label>
                            <input type="text" class="form-control" name="secret" id="editSecret" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" id="editDescription" rows="2"></textarea>
                        </div>
                        <hr/>
                        <div class="mb-3">
                            <label class="form-label">SNMP Community</label>
                            <input type="text" class="form-control" name="snmp_community" id="editSnmpCommunity" placeholder="public">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">SNMP Version</label>
                            <select class="form-select" name="snmp_version" id="editSnmpVersion">
                                <option value="1">v1</option>
                                <option value="2c">v2c</option>
                                <option value="3">v3</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">SNMP Port</label>
                            <input type="number" class="form-control" name="snmp_port" id="editSnmpPort" value="161">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" name="is_active" id="editActive" value="1">
                            <label class="form-check-label" for="editActive">Active</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function editNas(nas) {
            document.getElementById('editNasForm').action = `/admin/nas/${nas.id}/edit`;
            document.getElementById('editName').value = nas.name;
            document.getElementById('editType').value = nas.type;
            document.getElementById('editHost').value = nas.host;
            document.getElementById('editSecret').value = nas.secret;
            document.getElementById('editDescription').value = nas.description || '';
            document.getElementById('editSnmpCommunity').value = nas.snmp_community || '';
            document.getElementById('editSnmpVersion').value = nas.snmp_version || '2c';
            document.getElementById('editSnmpPort').value = nas.snmp_port || 161;
            document.getElementById('editActive').checked = nas.is_active == 1;
            
            new bootstrap.Modal(document.getElementById('editNasModal')).show();
        }

        function toggleNas(id) {
            if (confirm('Toggle NAS server status?')) {
                fetch(`/admin/nas/${id}/toggle`, { method: 'POST' })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) location.reload();
                        else alert('Error toggling NAS status');
                    });
            }
        }
    </script>
</body>
</html>
