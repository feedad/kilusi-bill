            display: block;
            padding: 12px 20px;
            transition: all 0.3s;
            font-size: 16px;
        }
        .sidebar a:hover {
            background: #34495e;
            color: #fff;
            padding-left: 24px;
        }
        .sidebar a.active {
            background: #34495e;
            color: #fff;
            border-left: 3px solid #3498db;
        }
        .sidebar a i {
            margin-right: 12px;
            width: 24px;
            text-align: center;
            font-size: 18px;
        }
        .sidebar .sidebar-header {
