            margin-bottom: 5px;
        }
        .sidebar .menu-toggle {
            cursor: pointer;
            padding: 12px 20px;
            color: #ecf0f1;
            font-size: 16px;
            font-weight: 500;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: all 0.3s;
            user-select: none;
        }
        .sidebar .menu-toggle:hover {
            background: #34495e;
            color: #fff;
        }
        .sidebar .menu-toggle i.toggle-icon {
            font-size: 10px;
            transition: transform 0.3s;
            margin-left: auto;
        }
        .sidebar .menu-toggle.collapsed i.toggle-icon {
            transform: rotate(0deg);
        }
        .sidebar .menu-toggle:not(.collapsed) i.toggle-icon {
            transform: rotate(90deg);
        }
        .sidebar .menu-section-header {
            padding: 15px 20px 8px 20px;
            font-size: 11px;
            font-weight: 600;
            color: #7f8c8d;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 10px;
        }
        .sidebar .menu-section-header.menu-toggle {
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 20px;
            transition: all 0.3s ease;
            user-select: none;
        }
        .sidebar .menu-section-header.menu-toggle:hover {
            background: #34495e;
            color: #fff;
        }
        .sidebar .menu-section-header i {
            margin-right: 8px;
            font-size: 12px;
        }
        .sidebar .submenu {
            background: #263647;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        .sidebar .submenu.show {
            max-height: 500px;
        }
        .sidebar .submenu a {
            padding: 10px 20px 10px 50px;
            font-size: 15px;
            color: #ecf0f1;
        }
        .sidebar .submenu a:hover {
            padding-left: 54px;
        }
        .main-content {
            margin-left: 250px;
            padding: 32px 24px;
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                position: relative;
            }
            .main-content {
                margin-left: 0;
            }
            /* Collapsible menu styles for mobile */
            .sidebar .menu-toggle {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 12px 20px;
                color: #ecf0f1;
                cursor: pointer;
                transition: all 0.3s ease;
                user-select: none;
            }
            .sidebar .menu-toggle:hover {
                background: #34495e;
                padding-left: 24px;
            }
            .sidebar .menu-toggle i.toggle-icon {
                transition: transform 0.3s ease;
                font-size: 12px;
            }
            .sidebar .menu-toggle:not(.collapsed) i.toggle-icon {
                transform: rotate(90deg);
            }
            .sidebar .menu-section-header {
                padding: 15px 20px 8px 20px;
                font-size: 11px;
                font-weight: 600;
                color: #7f8c8d;
                text-transform: uppercase;
                letter-spacing: 1px;
                margin-top: 10px;
            }
            .sidebar .menu-section-header i {
                margin-right: 8px;
                font-size: 12px;
            }
            .sidebar .submenu {
                background: #263647;
