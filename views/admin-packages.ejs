<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Package Management - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/responsive-admin.css">
  <link href="/css/dark-theme.css" rel="stylesheet">
  <link href="/css/theme-unify.css" rel="stylesheet">
  <style>
    /* Dark Theme */
    body { 
      background: #1a1d29 !important;
      color: #e0e0e0;
    }
    
    .main-content {
      background: #1a1d29;
    }
    
    /* Mobile responsive fixes */
    @media (max-width: 767.98px) {
      .main-content {
        margin-top: 70px !important;
        padding-top: 10px !important;
        z-index: 1;
      }
    }
    
    /* Card Dark Theme */
    .card {
      background: #252a3d !important;
      border: 1px solid #3a4052;
      color: #e0e0e0;
    }
    
    .card-header {
      background: #2d3348 !important;
      border-bottom: 1px solid #3a4052;
      color: #e0e0e0;
    }
    
    .card-body {
      color: #e0e0e0;
    }
    
    /* Text Colors */
    h2, h3, h4, h5, h6 {
      color: #ffffff !important;
    }
    
    p, span, label, .text-muted {
      color: #b8b8b8 !important;
    }
    
    strong {
      color: #e0e0e0;
    }
    
    /* Table Dark Theme */
    .table {
      color: #e0e0e0 !important;
      border-color: #3a4052;
    }
    
    .table thead th {
      background: #2d3348;
      border-color: #3a4052;
      color: #ffffff !important;
    }
    
    .table tbody tr {
      background: #252a3d;
      border-color: #3a4052;
    }
    
    .table tbody tr:hover {
      background: #2d3348;
    }
    
    .table td, .table th {
      border-color: #3a4052;
    }
    
    /* DataTables dark theme */
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_paginate {
      color: #e0e0e0;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      color: #e0e0e0 !important;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
      background: #2d3348;
      border-color: #3a4052;
    }
    
    /* Form controls dark theme */
    .form-control, .form-select {
      background-color: #1a1d29;
      border-color: #3a4052;
      color: #e0e0e0;
    }
    
    .form-control:focus, .form-select:focus {
      background-color: #1a1d29;
      border-color: #4a5fc1;
      color: #e0e0e0;
    }
    
    .modal-content {
      background-color: #252a3d;
      border-color: #3a4052;
    }
    
    .modal-header {
      background: #2d3348;
      border-bottom-color: #3a4052;
    }
    
    .modal-footer {
      border-top-color: #3a4052;
    }
    
    .btn-action {
      padding: 0.25rem 0.5rem;
      font-size: 0.875rem;
    }
    
    #packagesTable { width: 100% !important; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('partials/admin-responsive-sidebar', { page: 'packages', settings: settings }) %>
      
      <main class="col-md-10 main-content ms-sm-auto">
        <div class="container-fluid p-4">
          <div class="row mb-4">
            <div class="col-12">
              <h2><i class="bi bi-box-seam"></i> Manajemen Paket Langganan</h2>
              <p class="text-muted">Kelola paket internet dan harga berlangganan</p>
            </div>
          </div>

      <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle"></i> <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="bi bi-exclamation-triangle"></i> <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-box-seam"></i> Daftar Paket</h5>
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addPackageModal">
              <i class="bi bi-plus"></i> Tambah Paket
            </button>
          </div>
        </div>
        <div class="card-body">
          <!-- Global Isolir Profile Selector -->
          <div class="row mb-3">
            <div class="col-md-6">
              <form class="row g-2 align-items-end" method="POST" action="/admin/billing/settings/isolir-profile">
                <div class="col-12">
                  <label class="form-label">Profile Isolir (PPPoE)</label>
                  <select class="form-select" name="billing_isolir_profile" required>
                    <option value="">Pilih Profile Isolir...</option>
                    <% if (typeof pppoeProfiles !== 'undefined' && pppoeProfiles.length > 0) { %>
                      <% pppoeProfiles.forEach(profile => { %>
                        <option value="<%= profile.name %>" <%= (settings && settings.billing_isolir_profile === profile.name) ? 'selected' : '' %>>
                          <%= profile.name %>
                          <% if (profile.rateLimit && profile.rateLimit !== 'Unlimited') { %>
                            - <%= profile.rateLimit %>
                          <% } %>
                        </option>
                      <% }) %>
                    <% } else { %>
                      <option value="" disabled>Tidak ada profile ditemukan</option>
                    <% } %>
                  </select>
                  <div class="form-text">
                    ðŸ”’ Profil yang dipakai saat isolir massal/otomatis. Saat ini: <code><%= (settings && settings.billing_isolir_profile) ? settings.billing_isolir_profile : 'isolir' %></code>
                  </div>
                </div>
                <div class="col-auto">
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-save me-1"></i>Simpan Profil Isolir
                  </button>
                </div>
              </form>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-hover" id="packagesTable">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nama Paket</th>
                  <th>Kecepatan</th>
                  <th>Harga</th>
                  <th>Deskripsi</th>
                  <th>Status</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% packages.forEach(pkg => { %>
                  <tr>
                    <td><%= pkg.id %></td>
                    <td><%= pkg.name %></td>
                    <td><%= pkg.speed %></td>
                    <td>Rp <%= pkg.price.toLocaleString('id-ID') %></td>
                    <td><%= pkg.description %></td>
                    <td>
                      <% if (pkg.status === 'active') { %>
                        <span class="badge bg-success">Aktif</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Nonaktif</span>
                      <% } %>
                    </td>
                    <td>
                      <button class="btn btn-primary btn-action" 
                              data-pkg-id="<%= pkg.id %>"
                              data-pkg-name="<%= pkg.name %>"
                              data-pkg-speed="<%= pkg.speed %>"
                              data-pkg-price="<%= pkg.price %>"
                              data-pkg-description="<%= pkg.description || '' %>"
                              data-pkg-profile="<%= pkg.pppoe_profile || '' %>"
                              onclick="editPackageFromData(this)">
                        <i class="bi bi-pencil"></i>
                      </button>
                      <% if (pkg.status === 'active') { %>
                        <form method="POST" action="/admin/billing/packages/delete/<%= pkg.id %>" class="d-inline" onsubmit="return confirm('Yakin ingin menghapus paket ini?')">
                          <button type="submit" class="btn btn-danger btn-action">
                            <i class="bi bi-trash"></i>
                          </button>
                        </form>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
</div>

  <!-- Add Package Modal -->
  <div class="modal fade" id="addPackageModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Tambah Paket Baru</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form method="POST" action="/admin/billing/packages/create">
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Nama Paket</label>
              <input type="text" class="form-control" name="name" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Kecepatan</label>
              <input type="text" class="form-control" name="speed" placeholder="Contoh: 20 Mbps" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Harga (Rp)</label>
              <input type="number" class="form-control" name="price" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Deskripsi</label>
              <textarea class="form-control" name="description" rows="2"></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">PPPoE Profile</label>
              <select class="form-select" name="pppoe_profile" id="pppoeProfileSelect">
                <option value="">Pilih Profile PPPoE...</option>
                <option value="default">default</option>
                <% if (typeof pppoeProfiles !== 'undefined' && pppoeProfiles.length > 0) { %>
                  <% pppoeProfiles.forEach(profile => { %>
                    <option value="<%= profile.name %>"><%= profile.name %> - <%= profile.rateLimit %></option>
                  <% }) %>
                <% } %>
                <option value="custom">Custom (Tulis Manual)</option>
              </select>
              <input type="text" class="form-control mt-2" name="pppoe_profile_custom" id="pppoeProfileCustom" 
                     placeholder="Nama profile custom" style="display: none;">
              <small class="text-muted">Profile PPPoE dari MikroTik untuk mengatur bandwidth</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-primary">Simpan Paket</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Package Modal -->
  <div class="modal fade" id="editPackageModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Paket</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form method="POST" id="editPackageForm">
          <div class="modal-body">
            <input type="hidden" name="id" id="editPackageId">
            <div class="mb-3">
              <label class="form-label">Nama Paket</label>
              <input type="text" class="form-control" name="name" id="editPackageName" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Kecepatan</label>
              <input type="text" class="form-control" name="speed" id="editPackageSpeed" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Harga (Rp)</label>
              <input type="number" class="form-control" name="price" id="editPackagePrice" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Deskripsi</label>
              <textarea class="form-control" name="description" id="editPackageDescription" rows="2"></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">PPPoE Profile</label>
              <select class="form-select" name="pppoe_profile" id="editPackageProfile">
                <option value="">Pilih Profile PPPoE...</option>
                <option value="default">default</option>
                <% if (typeof pppoeProfiles !== 'undefined' && pppoeProfiles.length > 0) { %>
                  <% pppoeProfiles.forEach(profile => { %>
                    <option value="<%= profile.name %>"><%= profile.name %> - <%= profile.rateLimit %></option>
                  <% }) %>
                <% } %>
                <option value="custom">Custom (Tulis Manual)</option>
              </select>
              <input type="text" class="form-control mt-2" name="pppoe_profile_custom_edit" id="editPppoeProfileCustom" 
                     placeholder="Nama profile custom" style="display: none;">
              <small class="text-muted">Profile PPPoE dari MikroTik untuk mengatur bandwidth</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-primary">Update Paket</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    $(document).ready(function() {
      // Initialize DataTable
      $('#packagesTable').DataTable({
        responsive: true,
        language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/id.json' }
      });

      // Auto-hide alerts
      setTimeout(function() {
        $('.alert').fadeOut();
      }, 4000);
      
      // Handle custom PPPoE profile input - Create Modal
      $('#pppoeProfileSelect').on('change', function() {
        if ($(this).val() === 'custom') {
          $('#pppoeProfileCustom').show();
          $('#pppoeProfileCustom').attr('required', true);
        } else {
          $('#pppoeProfileCustom').hide();
          $('#pppoeProfileCustom').attr('required', false);
        }
      });
      
      // Handle custom PPPoE profile input - Edit Modal
      $('#editPackageProfile').on('change', function() {
        if ($(this).val() === 'custom') {
          $('#editPppoeProfileCustom').show();
          $('#editPppoeProfileCustom').attr('required', true);
        } else {
          $('#editPppoeProfileCustom').hide();
          $('#editPppoeProfileCustom').attr('required', false);
        }
      });
      
      // Before form submit, use custom value if selected
      $('form').on('submit', function(e) {
        const select = $(this).find('select[name="pppoe_profile"]');
        const customInput = $(this).find('input[name="pppoe_profile_custom"], input[name="pppoe_profile_custom_edit"]');
        if (select.val() === 'custom' && customInput.val()) {
          select.val(customInput.val());
        }
      });
    });

    function editPackageFromData(btn) {
      const id = btn.getAttribute('data-pkg-id');
      const name = btn.getAttribute('data-pkg-name');
      const speed = btn.getAttribute('data-pkg-speed');
      const price = btn.getAttribute('data-pkg-price');
      const description = btn.getAttribute('data-pkg-description');
      const profile = btn.getAttribute('data-pkg-profile');

      document.getElementById('editPackageId').value = id;
      document.getElementById('editPackageName').value = name;
      document.getElementById('editPackageSpeed').value = speed;
      document.getElementById('editPackagePrice').value = price;
      document.getElementById('editPackageDescription').value = description;
      document.getElementById('editPackageProfile').value = profile;
      document.getElementById('editPackageForm').action = `/admin/billing/packages/update/${id}`;

      new bootstrap.Modal(document.getElementById('editPackageModal')).show();
    }
  </script>
</body>
</html>
