<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Kilusi Mobile - Dashboard</title>
    <link rel="manifest" href="/manifest.json">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/dark-theme.css" rel="stylesheet">
    <link href="/css/theme-unify.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .mobile-container {
            max-width: 100%;
            margin: 0;
            padding: 0;
        }
        .mobile-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1rem;
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .mobile-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .stat-card {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .stat-card.warning {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }
        .stat-card.danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        }
        .stat-card.success {
            background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
        }
        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 0;
        }
        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
            margin: 0;
        }
        .quick-action {
            background: white;
            border-radius: 15px;
            padding: 1rem;
            text-align: center;
            margin-bottom: 1rem;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        .quick-action:active {
            transform: scale(0.95);
        }
        .quick-action i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: #007bff;
        }
        .quick-action h6 {
            margin: 0;
            color: #333;
        }
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 0.5rem;
            box-shadow: 0 -2px 20px rgba(0,0,0,0.1);
            z-index: 1000;
        }
        .nav-item {
            text-align: center;
            padding: 0.5rem;
            color: #666;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .nav-item.active {
            color: #007bff;
        }
        .nav-item i {
            font-size: 1.2rem;
            display: block;
            margin-bottom: 0.2rem;
        }
        .nav-item span {
            font-size: 0.7rem;
        }
        .content-area {
            padding-bottom: 80px; /* Space for bottom nav */
        }
        .pulse {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
        .offline-indicator {
            background: #dc3545;
            color: white;
            padding: 0.5rem;
            text-align: center;
            font-size: 0.8rem;
            display: none;
        }
        .online-indicator {
            background: #28a745;
            color: white;
            padding: 0.5rem;
            text-align: center;
            font-size: 0.8rem;
            display: none;
        }
    </style>
</head>
<body>
    <!-- Offline/Online Indicator -->
    <div id="offlineIndicator" class="offline-indicator">
        <i class="fas fa-wifi"></i> You're offline - Some features may be limited
    </div>
    <div id="onlineIndicator" class="online-indicator">
        <i class="fas fa-wifi"></i> You're back online
    </div>

    <div class="mobile-container">
        <!-- Mobile Header -->
        <div class="mobile-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm mb-2">
                        <i class="fas fa-arrow-left me-1"></i>Kembali
                    </a>
                    <h4 class="mb-0">Kilusi Mobile</h4>
                    <small class="text-muted">ISP Management</small>
                </div>
                <div>
                    <span class="badge bg-success pulse">
                        <i class="fas fa-circle me-1"></i>Online
                    </span>
                    <br>
                    <small class="text-muted">Updated: <%= new Date(lastUpdated).toLocaleString('id-ID') %></small>
                </div>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area p-3">

            <!-- Quick Stats -->
            <div class="row">
                <div class="col-6">
                    <div class="stat-card success">
                        <p class="stat-number" id="onlineDevices">
                            <%= data ? data.devices.online : 0 %>
                        </p>
                        <p class="stat-label">Online Devices</p>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-card warning">
                        <p class="stat-number" id="activePPPoE">
                            <%= data ? data.pppoe.active : 0 %>
                        </p>
                        <p class="stat-label">Active PPPoE</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="stat-card">
                        <p class="stat-number" id="totalCustomers">
                            <%= data ? data.customers.total : 0 %>
                        </p>
                        <p class="stat-label">Total Customers</p>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-card danger">
                        <p class="stat-number" id="pendingTroubles">
                            <%= data ? data.troubleReports.pending : 0 %>
                        </p>
                        <p class="stat-label">Pending Issues</p>
                    </div>
                </div>
            </div>

            <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Warning:</strong> Some data may not be available. Error: <%= error %>
            </div>
            <% } %>

            <!-- Quick Actions -->
            <div class="mobile-card">
                <h5 class="mb-3"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                <div class="row">
                    <div class="col-4">
                        <a href="/admin/analytics" class="quick-action text-decoration-none">
                            <i class="fas fa-chart-line"></i>
                            <h6>Analytics</h6>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="/admin/trouble" class="quick-action text-decoration-none">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h6>Troubles</h6>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="/admin/backup" class="quick-action text-decoration-none">
                            <i class="fas fa-database"></i>
                            <h6>Backup</h6>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <a href="/admin/genieacs" class="quick-action text-decoration-none">
                            <i class="fas fa-wifi"></i>
                            <h6>Devices</h6>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="/admin/mikrotik" class="quick-action text-decoration-none">
                            <i class="fas fa-router"></i>
                            <h6>PPPoE</h6>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="/admin/billing" class="quick-action text-decoration-none">
                            <i class="fas fa-receipt"></i>
                            <h6>Billing</h6>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="mobile-card">
                <h5 class="mb-3"><i class="fas fa-clock me-2"></i>Recent Activity</h5>
                <div id="recentActivity">
                    <% if (data && data.troubleReports.pending > 0) { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <small class="text-muted">Pending Issues</small>
                                <div class="small">You have <%= data.troubleReports.pending %> pending trouble reports</div>
                            </div>
                            <span class="badge bg-warning">Pending</span>
                        </div>
                    <% } %>
                    <% if (data && data.invoices.pending > 0) { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <small class="text-muted">Pending Invoices</small>
                                <div class="small">You have <%= data.invoices.pending %> pending invoices</div>
                            </div>
                            <span class="badge bg-warning">Pending</span>
                        </div>
                    <% } %>
                    <% if (!data || (data.troubleReports.pending === 0 && data.invoices.pending === 0)) { %>
                        <div class="text-center text-muted">
                            <i class="fas fa-check-circle me-2"></i>No pending issues
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- System Status -->
            <div class="mobile-card">
                <h5 class="mb-3"><i class="fas fa-heartbeat me-2"></i>System Status</h5>
                <div class="row">
                    <div class="col-6">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>WhatsApp Bot</span>
                            <span class="badge bg-success">Online</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>GenieACS</span>
                            <% if (data && data.devices.total > 0) { %>
                                <span class="badge bg-success">Online</span>
                            <% } else { %>
                                <span class="badge bg-danger">Offline</span>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Mikrotik</span>
                            <% if (data && data.pppoe.active >= 0) { %>
                                <span class="badge bg-success">Online</span>
                            <% } else { %>
                                <span class="badge bg-danger">Offline</span>
                            <% } %>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Database</span>
                            <span class="badge bg-success">Online</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Navigation -->
        <div class="bottom-nav">
            <div class="row">
                <div class="col-3">
                    <a href="/admin/dashboard" class="nav-item active">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </div>
                <div class="col-3">
                    <a href="/admin/analytics" class="nav-item">
                        <i class="fas fa-chart-line"></i>
                        <span>Analytics</span>
                    </a>
                </div>
                <div class="col-3">
                    <a href="/admin/trouble" class="nav-item">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>Troubles</span>
                    </a>
                </div>
                <div class="col-3">
                    <a href="/admin/setting" class="nav-item">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // PWA Installation
        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            // Show install button or banner
        });

        // Service Worker Registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then((registration) => {
                        console.log('SW registered: ', registration);
                    })
                    .catch((registrationError) => {
                        console.log('SW registration failed: ', registrationError);
                    });
            });
        }

        // Online/Offline Detection
        function updateConnectionStatus() {
            const isOnline = navigator.onLine;
            const statusElement = document.getElementById('connectionStatus');
            const offlineIndicator = document.getElementById('offlineIndicator');
            const onlineIndicator = document.getElementById('onlineIndicator');

            if (isOnline) {
                statusElement.className = 'badge bg-success pulse';
                statusElement.innerHTML = '<i class="fas fa-circle me-1"></i>Online';
                offlineIndicator.style.display = 'none';
                if (onlineIndicator.style.display === 'block') {
                    setTimeout(() => {
                        onlineIndicator.style.display = 'none';
                    }, 3000);
                }
            } else {
                statusElement.className = 'badge bg-danger';
                statusElement.innerHTML = '<i class="fas fa-circle me-1"></i>Offline';
                offlineIndicator.style.display = 'block';
            }
        }

        window.addEventListener('online', () => {
            updateConnectionStatus();
            onlineIndicator.style.display = 'block';
            setTimeout(() => {
                onlineIndicator.style.display = 'none';
            }, 3000);
        });

        window.addEventListener('offline', () => {
            updateConnectionStatus();
        });

        // Data sudah di-load di server-side, tidak perlu AJAX

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            updateConnectionStatus();
        });

        // Touch feedback for quick actions
        document.querySelectorAll('.quick-action').forEach(action => {
            action.addEventListener('touchstart', function() {
                this.style.transform = 'scale(0.95)';
            });
            
            action.addEventListener('touchend', function() {
                this.style.transform = 'scale(1)';
            });
        });
    </script>
</body>
</html>
