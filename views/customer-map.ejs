<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lokasi ONU | Portal ISP</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4895ef;
      --success-color: #4cc9f0;
      --warning-color: #f72585;
      --info-color: #560bad;
      --light-color: #f8f9fa;
      --dark-color: #212529;
      --card-border-radius: 16px;
      --btn-border-radius: 50px;
      --transition-speed: 0.3s;
    }

    body {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      color: var(--dark-color);
      line-height: 1.6;
    }

    /* Navbar Styling */
    .navbar {
      background: rgba(255, 255, 255, 0.95) !important;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    }

    .navbar-brand {
      font-weight: 700;
      color: var(--primary-color) !important;
      letter-spacing: -0.5px;
      display: flex;
      align-items: center;
    }

    /* Map Container */
    .map-container {
      height: calc(100vh - 76px);
      border-radius: var(--card-border-radius);
      overflow: hidden;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      margin: 1rem;
    }

    #map {
      height: 100%;
      width: 100%;
    }

    /* Info Panel */
    .info-panel {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: var(--card-border-radius);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
      z-index: 1000;
      margin: 1rem;
    }

    .info-panel .card-header {
      background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
      color: white;
      border-radius: var(--card-border-radius) var(--card-border-radius) 0 0 !important;
      border: none;
      font-weight: 600;
    }

    .info-panel .card-body {
      padding: 1rem;
    }

    /* Status Indicators */
    .status-indicator {
      display: inline-block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      margin-right: 8px;
    }

    .status-online {
      background-color: var(--success-color);
      box-shadow: 0 0 10px rgba(76, 201, 240, 0.5);
    }

    .status-offline {
      background-color: var(--warning-color);
      box-shadow: 0 0 10px rgba(247, 37, 133, 0.5);
    }

    /* Signal Strength */
    .signal-strength {
      display: flex;
      align-items: center;
      margin: 0.5rem 0;
    }

    .signal-bar {
      height: 8px;
      margin: 0 2px;
      border-radius: 2px;
      background-color: #e9ecef;
    }

    .signal-bar.active {
      background-color: var(--success-color);
    }

    /* Custom Leaflet Popup */
    .custom-popup .leaflet-popup-content-wrapper {
      border-radius: var(--card-border-radius);
      padding: 0;
    }

    .custom-popup .leaflet-popup-content {
      margin: 0;
      padding: 0;
    }

    .custom-popup .leaflet-popup-tip {
      background-color: white;
    }

    /* Loading Spinner */
    .loading-spinner {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 1000;
    }

    /* Responsive Design */
    @media (max-width: 991.98px) {
      .info-panel {
        margin: 0.5rem;
        max-height: 250px;
        overflow-y: auto;
      }

      .map-container {
        margin: 0.5rem;
        height: calc(100vh - 76px - 270px);
      }

      .navbar-brand img {
        width: 32px;
        height: 32px;
      }

      .navbar-brand {
        font-size: 1rem;
      }

      .nav-link {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
      }
    }

    @media (max-width: 768px) {
      .info-panel {
        margin: 0.25rem;
        max-height: 200px;
      }

      .map-container {
        margin: 0.25rem;
        height: calc(100vh - 76px - 220px);
        border-radius: 12px;
      }

      .navbar {
        padding: 0.5rem 1rem;
      }

      .navbar-brand {
        font-size: 0.95rem;
      }

      .nav-link {
        font-size: 0.85rem;
        padding: 0.4rem 0.6rem;
      }

      /* Improve touch targets for mobile */
      .leaflet-control-zoom a {
        width: 36px;
        height: 36px;
        line-height: 36px;
        font-size: 16px;
      }

      /* Better popup sizing on mobile */
      .leaflet-popup-content {
        max-width: 250px !important;
      }
    }

    @media (max-width: 576px) {
      .map-container {
        margin: 0;
        border-radius: 0;
        height: calc(100vh - 76px - 180px);
      }

      .info-panel {
        margin: 0;
        border-radius: 0;
        max-height: 160px;
      }

      .navbar-brand {
        font-size: 0.9rem;
      }

      .nav-link {
        font-size: 0.8rem;
        padding: 0.3rem 0.5rem;
      }

      /* Stack navigation items on very small screens */
      .navbar-nav .nav-item:not(:last-child) {
        margin-bottom: 0.25rem;
      }
    }

    /* Desktop layout */
    @media (min-width: 992px) {
      .info-panel {
        max-height: calc(100vh - 120px);
        overflow-y: auto;
      }

      .map-container {
        height: calc(100vh - 76px);
      }
    }

    /* Improve mobile touch experience */
    @media (hover: none) and (pointer: coarse) {
      .leaflet-container {
        -webkit-tap-highlight-color: transparent;
      }

      .leaflet-control-zoom a {
        background-color: rgba(255, 255, 255, 0.9);
        border: 2px solid rgba(0,0,0,0.1);
      }

      .leaflet-control-zoom a:hover {
        background-color: rgba(255, 255, 255, 1);
      }
    }

    /* Footer */
    .footer {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-top: 1px solid rgba(0, 0, 0, 0.05);
      padding: 1rem 0;
      margin-top: auto;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/customer/dashboard">
        <img id="mapLogo" src="/img/<%= (settings && settings.logo_filename) ? settings.logo_filename : 'logo.png' %>?v=<%= Date.now() %>" alt="Logo" width="40" height="40" class="me-2">
        <%= companyHeader %>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/customer/dashboard">
              <i class="bi bi-house-door me-1"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/customer/map">
              <i class="bi bi-geo-alt-fill me-1"></i>Lokasi ONU
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customer/trouble/simple">
              <i class="bi bi-exclamation-triangle me-1"></i>Laporan Gangguan
            </a>
          </li>
        </ul>

        <ul class="navbar-nav">
          <li class="nav-item">
            <span class="nav-link text-muted">
              <i class="bi bi-phone me-1"></i><%= customerPhone %>
            </span>
          </li>
          <li class="nav-item">
            <form method="POST" action="/customer/logout" class="d-inline">
              <button type="submit" class="nav-link btn btn-link text-decoration-none border-0 p-0 m-0" style="color: inherit;">
                <i class="bi bi-box-arrow-right me-1"></i>Logout
              </button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Loading Spinner -->
  <div class="loading-spinner d-none">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <!-- Main Content Container -->
  <div class="container-fluid p-0">
    <div class="row g-0">
      <!-- Info Panel (Mobile: Top, Desktop: Right) -->
      <div class="col-12 col-lg-4 order-2 order-lg-1">
        <div class="info-panel card d-block">
          <div class="card-header">
            <h6 class="mb-0">
              <i class="bi bi-info-circle me-2"></i>Informasi ONU
            </h6>
          </div>
          <div class="card-body" id="deviceInfo">
            <div class="text-center text-muted">
              <i class="bi bi-geo-alt fs-1 mb-2"></i>
              <p>Klik marker pada peta untuk melihat detail ONU</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Map Container -->
      <div class="col-12 col-lg-8 order-1 order-lg-2">
        <div class="map-container">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    // Initialize map
    let map;
    let marker;
    let deviceData = null;

    // Initialize map when page loads
    document.addEventListener('DOMContentLoaded', function() {
      initializeMap();
      loadDeviceData();
    });

    function initializeMap() {
      // Default center (Indonesia center)
      const defaultCenter = [-2.5489, 118.0149];
      const defaultZoom = 5;

      // Initialize Leaflet map
      map = L.map('map', {
        center: defaultCenter,
        zoom: defaultZoom,
        zoomControl: true,
        scrollWheelZoom: true
      });

      // Add Satellite tiles (Esri)
      L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
        attribution: '© <a href="https://www.esri.com/">Esri</a> — Source: Esri, Maxar, GeoEye, Earthstar Geographics, CNES/Airbus DS, USDA, USGS, AeroGRID, IGN, and the GIS User Community',
        maxZoom: 19
      }).addTo(map);

      // Add scale control
      L.control.scale().addTo(map);

      // Show loading spinner
      document.querySelector('.loading-spinner').classList.remove('d-none');
    }

    async function loadDeviceData() {
      try {
        console.log('🗺️ Memuat data lokasi ONU...');
        const response = await fetch('/customer/map/data');
        const data = await response.json();

        if (data.success && data.device) {
          deviceData = data.device;
          displayDeviceOnMap(deviceData);
          console.log('✅ Data ONU berhasil dimuat');

          // Hide loading spinner
          document.querySelector('.loading-spinner').classList.add('d-none');
        } else {
          throw new Error(data.message || 'Data perangkat tidak ditemukan');
        }
      } catch (error) {
        console.error('❌ Error loading device data:', error);
        document.querySelector('.loading-spinner').classList.add('d-none');

        // Show appropriate error message based on error type
        let errorTitle = 'Error';
        let errorMessage = error.message;
        let errorIcon = 'error';

        if (error.message.includes('tidak ditemukan')) {
          errorTitle = 'ONU Tidak Terdaftar';
          errorIcon = 'info';
          errorMessage = 'Perangkat ONU Anda belum terdaftar di sistem atau belum terhubung ke server. Silakan hubungi admin untuk pendaftaran.';
        } else if (error.message.includes('lokasi belum tersedia') || error.message.includes('lokasi tidak tersedia')) {
          errorTitle = 'Lokasi Belum Diset';
          errorIcon = 'warning';
          errorMessage = 'Lokasi ONU Anda belum diatur oleh admin. Silakan hubungi admin untuk mengatur lokasi perangkat Anda.';
        } else if (error.message.includes('Service GenieACS tidak tersedia')) {
          errorTitle = 'Service Tidak Tersedia';
          errorIcon = 'error';
          errorMessage = 'Service monitoring sedang tidak tersedia. Silakan coba lagi dalam beberapa menit.';
        }

        Swal.fire({
          icon: errorIcon,
          title: errorTitle,
          html: `<div style="text-align: left;">
                   <p><strong>Detail:</strong> ${errorMessage}</p>
                   <hr>
                   <p><small><strong>Solusi:</strong></small></p>
                   <ul style="font-size: 0.9em; margin: 0; padding-left: 20px;">
                     <li>Pastikan ONU Anda sudah terpasang dan menyala</li>
                     <li>Cek koneksi internet Anda</li>
                     <li>Hubungi admin jika masalah berlanjut</li>
                   </ul>
                 </div>`,
          confirmButtonText: 'OK',
          showCancelButton: true,
          cancelButtonText: 'Hubungi Admin',
          reverseButtons: true
        }).then((result) => {
          if (result.dismiss === Swal.DismissReason.cancel) {
            // Redirect to contact admin or trouble report
            window.location.href = '/customer/trouble/simple';
          }
        });
      }
    }

    function displayDeviceOnMap(device) {
      const { location, status, info, serialNumber, pppoeUsername } = device;

      // Create marker
      const markerIcon = L.divIcon({
        className: 'custom-marker',
        html: `<div style="
          background-color: ${status.isOnline ? '#4cc9f0' : '#f72585'};
          width: 24px;
          height: 24px;
          border-radius: 50%;
          border: 3px solid white;
          box-shadow: 0 2px 8px rgba(0,0,0,0.3);
          display: flex;
          align-items: center;
          justify-content: center;
          color: white;
          font-weight: bold;
          font-size: 12px;
        ">${status.isOnline ? '●' : '○'}</div>`,
        iconSize: [24, 24],
        iconAnchor: [12, 12]
      });

      marker = L.marker([location.lat, location.lng], {
        icon: markerIcon
      }).addTo(map);

      // Create popup content
      const popupContent = createPopupContent(device);
      marker.bindPopup(popupContent, {
        className: 'custom-popup',
        maxWidth: 300
      });

      // Center map on device location
      map.setView([location.lat, location.lng], 15);

      // Update info panel
      updateInfoPanel(device);

      // Add click event to show info
      marker.on('click', function() {
        updateInfoPanel(device);
      });
    }

    function createPopupContent(device) {
      const { status, info, serialNumber, pppoeUsername, location } = device;

      return `
        <div style="padding: 15px; font-family: 'Segoe UI', sans-serif;">
          <h6 style="margin: 0 0 10px 0; color: #4361ee; font-weight: 600;">
            <i class="bi bi-router me-1"></i>ONU ${serialNumber}
          </h6>

          <div style="margin-bottom: 8px;">
            <span class="status-indicator ${status.isOnline ? 'status-online' : 'status-offline'}"></span>
            <strong>Status:</strong> ${status.isOnline ? 'Online' : 'Offline'}
          </div>

          <div style="margin-bottom: 8px;">
            <strong><i class="bi bi-person me-1"></i>PPPoE:</strong> ${pppoeUsername}
          </div>

          ${status.rxPower ? `
            <div style="margin-bottom: 8px;">
              <strong><i class="bi bi-reception-4 me-1"></i>Rx Power:</strong>
              <span style="color: ${status.rxPower < -25 ? '#f72585' : status.rxPower < -20 ? '#ffa500' : '#4cc9f0'}">
                ${status.rxPower} dBm
              </span>
            </div>
          ` : ''}

          <div style="margin-bottom: 8px;">
            <strong><i class="bi bi-clock me-1"></i>Last Inform:</strong><br>
            <small>${status.lastInform}</small>
          </div>

          <div style="margin-bottom: 8px;">
            <strong><i class="bi bi-cpu me-1"></i>Device:</strong><br>
            <small>${info.manufacturer} ${info.modelName}</small>
          </div>

          ${location.address ? `
            <div style="margin-bottom: 8px;">
              <strong><i class="bi bi-geo-alt me-1"></i>Alamat:</strong><br>
              <small>${location.address}</small>
            </div>
          ` : ''}
        </div>
      `;
    }

    function updateInfoPanel(device) {
      const { status, info, serialNumber, pppoeUsername, location } = device;

      const infoPanel = document.getElementById('deviceInfo');
      infoPanel.innerHTML = `
        <div class="mb-3">
          <h6 class="text-primary">
            <i class="bi bi-router me-2"></i>ONU ${serialNumber}
          </h6>
        </div>

        <div class="mb-3">
          <div class="d-flex align-items-center mb-2">
            <span class="status-indicator ${status.isOnline ? 'status-online' : 'status-offline'}"></span>
            <strong>Status:</strong>
            <span class="ms-2 ${status.isOnline ? 'text-success' : 'text-danger'}">
              ${status.isOnline ? 'Online' : 'Offline'}
            </span>
          </div>

          <div class="mb-2">
            <strong><i class="bi bi-person me-1"></i>PPPoE:</strong>
            <div class="text-muted">${pppoeUsername}</div>
          </div>

          ${status.rxPower ? `
            <div class="mb-2">
              <strong><i class="bi bi-reception-4 me-1"></i>Rx Power:</strong>
              <div>
                <span style="color: ${status.rxPower < -25 ? '#f72585' : status.rxPower < -20 ? '#ffa500' : '#4cc9f0'}">
                  ${status.rxPower} dBm
                </span>
                <div class="signal-strength mt-1">
                  ${generateSignalBars(status.rxPower)}
                </div>
              </div>
            </div>
          ` : ''}

          <div class="mb-2">
            <strong><i class="bi bi-clock me-1"></i>Last Inform:</strong>
            <div class="text-muted small">${status.lastInform}</div>
          </div>
        </div>

        <hr>

        <div class="mb-3">
          <h6 class="text-primary mb-2">
            <i class="bi bi-cpu me-1"></i>Informasi Device
          </h6>
          <div class="mb-2">
            <strong>Manufacturer:</strong>
            <div class="text-muted small">${info.manufacturer}</div>
          </div>
          <div class="mb-2">
            <strong>Model:</strong>
            <div class="text-muted small">${info.modelName}</div>
          </div>
          <div class="mb-2">
            <strong>Firmware:</strong>
            <div class="text-muted small">${info.softwareVersion}</div>
          </div>
        </div>

        ${location.address ? `
          <hr>
          <div class="mb-3">
            <h6 class="text-primary mb-2">
              <i class="bi bi-geo-alt me-1"></i>Lokasi
            </h6>
            <div class="text-muted small">${location.address}</div>
          </div>
        ` : ''}
      `;
    }

    function generateSignalBars(rxPower) {
      const bars = 5;
      let activeBars = 0;

      if (rxPower >= -15) activeBars = 5;
      else if (rxPower >= -20) activeBars = 4;
      else if (rxPower >= -25) activeBars = 3;
      else if (rxPower >= -30) activeBars = 2;
      else if (rxPower >= -35) activeBars = 1;

      let html = '';
      for (let i = 1; i <= bars; i++) {
        html += `<div class="signal-bar ${i <= activeBars ? 'active' : ''}"></div>`;
      }
      return html;
    }

    // Handle window resize
    window.addEventListener('resize', function() {
      if (map) {
        map.invalidateSize();
      }
    });

    // Handle error events
    window.addEventListener('unhandledrejection', function(event) {
      console.error('Unhandled promise rejection:', event.reason);
      document.querySelector('.loading-spinner').classList.add('d-none');

      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Terjadi kesalahan saat memuat peta',
        confirmButtonText: 'OK'
      });
    });
    
    // Fungsi untuk me-refresh logo dengan timestamp baru
    function refreshLogo() {
        const logo = document.getElementById('mapLogo');
        if (logo) {
            // Tambahkan parameter timestamp baru untuk memaksa reload gambar
            const timestamp = new Date().getTime();
            const src = logo.src.split('?')[0]; // Hapus parameter yang ada
            logo.src = `${src}?v=${timestamp}`;
        }
    }

    // Refresh logo setiap 10 detik untuk customer map page
    setInterval(refreshLogo, 10000);

    // Refresh logo saat halaman dimuat
    document.addEventListener('DOMContentLoaded', function() {
        // Delay sedikit untuk memastikan elemen sudah ter-render
        setTimeout(refreshLogo, 1000);
    });
  </script>
</body>
</html>
