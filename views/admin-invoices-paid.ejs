<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Paid Invoices - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/responsive-admin.css">
  <link href="/css/dark-theme.css" rel="stylesheet">
  <link href="/css/theme-unify.css" rel="stylesheet">
  <link href="/css/widgets.css" rel="stylesheet">
  <style>
    /* Dark Theme */
    body { 
      background: #1a1d29 !important;
      color: #e0e0e0;
    }
    
    .main-content {
      background: #1a1d29;
    }
    
    /* Mobile responsive fixes */
    @media (max-width: 767.98px) {
      .main-content {
        margin-top: 70px !important;
        padding-top: 10px !important;
        z-index: 1;
      }
    }
    
    /* Card Dark Theme */
    .card {
      background: #252a3d !important;
      border: 1px solid #3a4052;
      color: #e0e0e0;
    }
    
    .card-header {
      background: #2d3348 !important;
      border-bottom: 1px solid #3a4052;
      color: #e0e0e0;
    }
    
    .card-body {
      color: #e0e0e0;
    }
    
    /* Text Colors */
    h2, h3, h4, h5, h6 {
      color: #ffffff !important;
    }
    
    p, span, label, .text-muted {
      color: #b8b8b8 !important;
    }
    
    strong {
      color: #e0e0e0;
    }
    
    /* Table Dark Theme */
    .table {
      color: #e0e0e0 !important;
      border-color: #3a4052;
    }
    
    .table thead th {
      background: #2d3348;
      border-color: #3a4052;
      color: #ffffff !important;
    }
    
    .table tbody tr {
      background: #252a3d;
      border-color: #3a4052;
    }
    
    .table tbody tr:hover {
      background: #2d3348;
    }
    
    .table td, .table th {
      border-color: #3a4052;
    }
    
    /* DataTables dark theme */
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_paginate {
      color: #e0e0e0;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      color: #e0e0e0 !important;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
      background: #2d3348;
      border-color: #3a4052;
    }
    
    #invoicesTable { width: 100% !important; }
    /* Using global stats-card styles from /css/widgets.css */
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('partials/admin-responsive-sidebar', { page: 'invoices-paid', settings: settings }) %>
      
      <main class="col-md-10 main-content ms-sm-auto">
        <div class="container-fluid p-4">
          <div class="row mb-4">
            <div class="col-12">
              <h2><i class="bi bi-check-circle text-success"></i> Invoice Lunas</h2>
              <p class="text-muted">Riwayat invoice yang sudah dibayar</p>
            </div>
          </div>

      <!-- Alert Messages -->
      <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle"></i> <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="bi bi-exclamation-triangle"></i> <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <!-- Statistics Cards -->
      <div class="row g-3 mb-4">
        <div class="col-md-4">
          <div class="stats-card billing-paid">
            <div class="stats-icon">
              <i class="bi bi-check-circle"></i>
            </div>
            <div class="stats-info">
              <div class="stats-label">Total Invoice Lunas</div>
              <div class="stats-value" id="totalPaid">
                <div class="spinner-border spinner-border-sm" role="status"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="stats-card billing-revenue">
            <div class="stats-icon">
              <i class="bi bi-cash-stack"></i>
            </div>
            <div class="stats-info">
              <div class="stats-label">Total Pendapatan</div>
              <div class="stats-value" id="totalRevenue">
                <div class="spinner-border spinner-border-sm" role="status"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="stats-card info">
            <div class="stats-icon">
              <i class="bi bi-calendar-month"></i>
            </div>
            <div class="stats-info">
              <div class="stats-label">Bulan Ini</div>
              <div class="stats-value" id="monthlyRevenue">
                <div class="spinner-border spinner-border-sm" role="status"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> Daftar Invoice Lunas</h5>
            <a href="/admin/invoices/unpaid" class="btn btn-warning btn-sm">
              <i class="bi bi-file-earmark-x"></i> Lihat Invoice Belum Lunas
            </a>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover" id="invoicesTable">
              <thead>
                <tr>
                  <th class="text-start">No. Tagihan</th>
                  <th class="text-start">Pelanggan</th>
                  <th class="text-start">No. HP</th>
                  <th class="text-start">Paket</th>
                  <th class="text-end">Jumlah</th>
                  <th class="text-start">Tgl Bayar</th>
                  <th class="text-start">Metode</th>
                  <th class="text-start">Catatan</th>
                </tr>
              </thead>
              <tbody>
                <!-- Data will be loaded by DataTables -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
</div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    let invoicesTable;

    $(document).ready(function() {
      // Load statistics
      loadPaidStatistics();
      
      // Initialize DataTable with server-side processing - only paid
      invoicesTable = $('#invoicesTable').DataTable({
        processing: true,
        serverSide: true,
        ajax: {
          url: '/admin/billing/api/invoices',
          data: function(d) {
            d.status = 'paid'; // Filter only paid invoices
          },
          dataSrc: 'data'
        },
        order: [[5, 'desc']], // Sort by payment date desc
        autoWidth: false,
        columns: [
          { data: 'invoice_number', className: 'text-start' },
          { data: 'customer_name', className: 'text-start', render: (v) => v || '-' },
          { data: 'customer_phone', className: 'text-start' },
          { data: 'package_name', className: 'text-start' },
          { data: 'amount', className: 'text-end', render: (v) => 'Rp ' + parseFloat(v).toLocaleString('id-ID') },
          { data: 'paid_at', className: 'text-start', render: (v) => {
            if (!v) return '-';
            const paidDate = new Date(v);
            return paidDate.toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) +
                   ' <small class="text-muted">' + paidDate.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) + '</small>';
          }},
          { data: 'payment_method', className: 'text-start', render: (v) => {
            if (!v) return '<span class="badge bg-secondary">-</span>';
            const methods = {
              'cash': '<span class="badge bg-success">üíµ Tunai</span>',
              'bank_transfer': '<span class="badge bg-info">üè¶ Transfer Bank</span>',
              'ewallet': '<span class="badge bg-primary">üì± E-Wallet</span>',
              'qris': '<span class="badge bg-warning">üì≤ QRIS</span>',
              'tripay': '<span class="badge bg-danger">üí≥ Tripay</span>',
              'other': '<span class="badge bg-secondary">üîπ Lainnya</span>'
            };
            return methods[v] || `<span class="badge bg-secondary">${v}</span>`;
          }},
          { data: 'payment_notes', className: 'text-start', render: (v, t, row) => {
            let notes = v || '-';
            if (row.bank_name) {
              notes = `${row.bank_name}` + (v ? ` - ${v}` : '');
            }
            return notes;
          }}
        ],
        language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/id.json' }
      });

      // Auto-hide alerts
      setTimeout(function() {
        $('.alert').fadeOut();
      }, 4000);
    });

    function loadPaidStatistics() {
      $.ajax({
        url: '/admin/billing/api/invoices-stats',
        method: 'GET',
        data: { status: 'paid' },
        success: function(data) {
          $('#totalPaid').html(data.total || 0);
          $('#totalRevenue').html('Rp ' + (data.totalAmount || 0).toLocaleString('id-ID'));
          $('#monthlyRevenue').html('Rp ' + (data.monthlyAmount || 0).toLocaleString('id-ID'));
        },
        error: function() {
          $('#totalPaid').html('0');
          $('#totalRevenue').html('Rp 0');
          $('#monthlyRevenue').html('Rp 0');
        }
      });
    }
  </script>
</body>
</html>
