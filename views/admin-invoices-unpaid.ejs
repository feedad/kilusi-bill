<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Unpaid Invoices - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/responsive-admin.css">
  <link href="/css/dark-theme.css" rel="stylesheet">
  <link href="/css/theme-unify.css" rel="stylesheet">
  <link href="/css/widgets.css" rel="stylesheet">
  <style>
    /* Dark Theme */
    body { 
      background: #1a1d29 !important;
      color: #e0e0e0;
    }
    
    .main-content {
      background: #1a1d29;
    }
    
    /* Mobile responsive fixes */
    @media (max-width: 767.98px) {
      .main-content {
        margin-top: 70px !important;
        padding-top: 10px !important;
        z-index: 1;
      }
    }
    
    /* Card Dark Theme */
    .card {
      background: #252a3d !important;
      border: 1px solid #3a4052;
      color: #e0e0e0;
    }
    
    .card-header {
      background: #2d3348 !important;
      border-bottom: 1px solid #3a4052;
      color: #e0e0e0;
    }
    
    .card-body {
      color: #e0e0e0;
    }
    
    /* Text Colors */
    h2, h3, h4, h5, h6 {
      color: #ffffff !important;
    }
    
    p, span, label, .text-muted {
      color: #b8b8b8 !important;
    }
    
    strong {
      color: #e0e0e0;
    }
    
    /* Table Dark Theme */
    .table {
      color: #e0e0e0 !important;
      border-color: #3a4052;
    }
    
    .table thead th {
      background: #2d3348;
      border-color: #3a4052;
      color: #ffffff !important;
    }
    
    .table tbody tr {
      background: #252a3d;
      border-color: #3a4052;
    }
    
    .table tbody tr:hover {
      background: #2d3348;
    }
    
    .table td, .table th {
      border-color: #3a4052;
    }
    
    /* DataTables dark theme */
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_paginate {
      color: #e0e0e0;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      color: #e0e0e0 !important;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
      background: #2d3348;
      border-color: #3a4052;
    }
    
    /* Form controls dark theme */
    .form-control, .form-select {
      background-color: #1a1d29;
      border-color: #3a4052;
      color: #e0e0e0;
    }
    
    .form-control:focus, .form-select:focus {
      background-color: #1a1d29;
      border-color: #4a5fc1;
      color: #e0e0e0;
    }
    
    .modal-content {
      background-color: #252a3d;
      border-color: #3a4052;
    }
    
    .modal-header {
      background: #2d3348;
      border-bottom-color: #3a4052;
    }
    
    .modal-footer {
      border-top-color: #3a4052;
    }
    
    .btn-action {
      padding: 0.25rem 0.5rem;
      font-size: 0.875rem;
    }
    
    #invoicesTable { width: 100% !important; }
    
    /* Using global stats-card styles from /css/widgets.css */
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('partials/admin-responsive-sidebar', { page: 'invoices-unpaid', settings: settings }) %>
      
      <main class="col-md-10 main-content ms-sm-auto">
        <div class="container-fluid p-4">
          <!-- Header Section -->
          <div class="row mb-4">
            <div class="col-12">
              <h2><i class="bi bi-file-earmark-x text-warning"></i> Invoice Belum Lunas</h2>
              <p class="text-muted">Kelola invoice yang belum dibayar pelanggan</p>
            </div>
          </div>

          <!-- Alert Messages -->
          <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="bi bi-check-circle"></i> <%= success %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% } %>
          <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="bi bi-exclamation-triangle"></i> <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% } %>

          <!-- Statistics Cards -->
          <div class="row g-3 mb-4">
            <div class="col-md-4">
              <div class="stats-card billing-unpaid">
                <div class="stats-icon">
                  <i class="bi bi-file-earmark-x"></i>
                </div>
                <div class="stats-info">
                  <div class="stats-label">Total Invoice Belum Lunas</div>
                  <div class="stats-value" id="totalUnpaid">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="stats-card billing-overdue">
                <div class="stats-icon">
                  <i class="bi bi-cash-stack"></i>
                </div>
                <div class="stats-info">
                  <div class="stats-label">Total Nominal Belum Lunas</div>
                  <div class="stats-value" id="totalUnpaidAmount">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="stats-card billing-late">
                <div class="stats-icon">
                  <i class="bi bi-exclamation-triangle"></i>
                </div>
                <div class="stats-info">
                  <div class="stats-label">Invoice Terlambat</div>
                  <div class="stats-value" id="totalOverdue">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Daftar Invoice Belum Lunas</h5>
                <div class="d-flex gap-2">
                  <a href="/admin/invoices/paid" class="btn btn-success btn-sm">
                    <i class="bi bi-check-circle"></i> Lihat Invoice Lunas
                  </a>
                  <form method="POST" action="/admin/billing/generate-monthly-invoices" class="d-inline">
                    <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Generate tagihan bulanan untuk semua pelanggan aktif?')">
                      <i class="bi bi-calendar"></i> Generate Tagihan
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover" id="invoicesTable">
                  <thead>
                    <tr>
                  <th class="text-start">No. Tagihan</th>
                  <th class="text-start">Pelanggan</th>
                  <th class="text-start">No. HP</th>
                  <th class="text-start">Paket</th>
                  <th class="text-end">Jumlah</th>
                  <th class="text-start">Jatuh Tempo</th>
                  <th class="text-start">Status</th>
                  <th class="text-center">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <!-- Data will be loaded by DataTables -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Payment Method Modal -->
  <div class="modal fade" id="paymentMethodModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Konfirmasi Pembayaran</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form method="POST" id="paymentForm">
          <div class="modal-body">
            <input type="hidden" name="invoice_id" id="invoiceId">
            
            <div class="mb-3">
              <label class="form-label">Nomor Invoice</label>
              <input type="text" class="form-control" id="invoiceNumber" readonly>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Nama Pelanggan</label>
              <input type="text" class="form-control" id="customerName" readonly>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Jumlah Tagihan</label>
              <input type="text" class="form-control" id="invoiceAmount" readonly>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Metode Pembayaran <span class="text-danger">*</span></label>
              <select class="form-select" name="payment_method" id="paymentMethod" required>
                <option value="">Pilih Metode Pembayaran...</option>
                <option value="cash">üíµ Tunai</option>
                <option value="bank_transfer">üè¶ Transfer Bank</option>
                <option value="ewallet">üì± E-Wallet (OVO, DANA, GoPay)</option>
                <option value="qris">üì≤ QRIS</option>
                <option value="tripay">üí≥ Payment Gateway (Tripay)</option>
                <option value="other">üîπ Lainnya</option>
              </select>
            </div>
            
            <div class="mb-3" id="bankNameField" style="display: none;">
              <label class="form-label">Nama Bank</label>
              <input type="text" class="form-control" name="bank_name" id="bankName" placeholder="Contoh: BCA, BNI, Mandiri">
            </div>
            
            <div class="mb-3">
              <label class="form-label">Catatan (Opsional)</label>
              <textarea class="form-control" name="payment_notes" rows="2" placeholder="Catatan tambahan tentang pembayaran..."></textarea>
            </div>
            
            <div class="alert alert-info">
              <i class="bi bi-info-circle"></i> Pastikan pembayaran sudah diterima sebelum menandai invoice sebagai lunas.
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check-circle"></i> Tandai Lunas
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    let invoicesTable;

    $(document).ready(function() {
      // Load statistics
      loadUnpaidStatistics();
      
      // Initialize DataTable with server-side processing - only unpaid
      invoicesTable = $('#invoicesTable').DataTable({
        processing: true,
        serverSide: true,
        ajax: {
          url: '/admin/billing/api/invoices',
          data: function(d) {
            d.status = 'unpaid'; // Filter only unpaid invoices
          },
          dataSrc: 'data'
        },
        order: [[0, 'desc']], // Sort by invoice number desc
        autoWidth: false,
        columns: [
          { data: 'invoice_number', className: 'text-start' },
          { data: 'customer_name', className: 'text-start', render: (v) => v || '-' },
          { data: 'customer_phone', className: 'text-start' },
          { data: 'package_name', className: 'text-start' },
          { data: 'amount', className: 'text-end', render: (v) => 'Rp ' + parseFloat(v).toLocaleString('id-ID') },
          { data: 'due_date', className: 'text-start', render: (v, t, row) => {
            const dueDate = new Date(v);
            const isOverdue = dueDate < new Date();
            const dateStr = dueDate.toLocaleDateString('id-ID');
            return isOverdue ? `<span class="text-danger fw-bold">${dateStr}</span>` : dateStr;
          }},
          { data: 'status', className: 'text-start', render: (v, t, row) => {
            if (new Date(row.due_date) < new Date()) {
              const daysOverdue = Math.floor((new Date() - new Date(row.due_date)) / (1000 * 60 * 60 * 24));
              return `<span class="badge bg-danger">Terlambat ${daysOverdue} hari</span>`;
            }
            return '<span class="badge bg-warning">Belum Lunas</span>';
          }},
          { data: null, orderable: false, className: 'text-center', render: (d, t, row) => {
            return `
              <button type="button" class="btn btn-success btn-action" onclick="openPaymentModal('${row.id}', '${row.invoice_number}', '${row.customer_name || '-'}', ${row.amount})">
                <i class="bi bi-check-circle"></i> Bayar
              </button>
              <form method="POST" action="/admin/billing/customers/unisolir" class="d-inline">
                <input type="hidden" name="phone" value="${row.customer_phone}">
                <button type="submit" class="btn btn-secondary btn-action" onclick="return confirm('Unisolir pelanggan ini tanpa pelunasan?')">
                  <i class="bi bi-unlock"></i> Unisolir
                </button>
              </form>
            `;
          }}
        ],
        language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/id.json' }
      });

      // Auto-hide alerts
      setTimeout(function() {
        $('.alert').fadeOut();
      }, 4000);
      
      // Show/hide bank name field based on payment method
      $('#paymentMethod').on('change', function() {
        if ($(this).val() === 'bank_transfer') {
          $('#bankNameField').show();
          $('#bankName').attr('required', true);
        } else {
          $('#bankNameField').hide();
          $('#bankName').attr('required', false);
        }
      });
    });

    function loadUnpaidStatistics() {
      $.ajax({
        url: '/admin/billing/api/invoices-stats',
        method: 'GET',
        data: { status: 'unpaid' },
        success: function(data) {
          $('#totalUnpaid').html(data.total || 0);
          $('#totalUnpaidAmount').html('Rp ' + (data.totalAmount || 0).toLocaleString('id-ID'));
          $('#totalOverdue').html(data.overdue || 0);
        },
        error: function() {
          $('#totalUnpaid').html('0');
          $('#totalUnpaidAmount').html('Rp 0');
          $('#totalOverdue').html('0');
        }
      });
    }

    function openPaymentModal(invoiceId, invoiceNumber, customerName, amount) {
      $('#invoiceId').val(invoiceId);
      $('#invoiceNumber').val(invoiceNumber);
      $('#customerName').val(customerName);
      $('#invoiceAmount').val('Rp ' + parseFloat(amount).toLocaleString('id-ID'));
      $('#paymentForm').attr('action', `/admin/billing/invoices/mark-paid/${invoiceId}`);
      
      // Reset form
      $('#paymentMethod').val('');
      $('#bankNameField').hide();
      $('#bankName').val('');
      
      new bootstrap.Modal(document.getElementById('paymentMethodModal')).show();
    }
  </script>
        </div>
      </main>
    </div>
  </div>
</body>
</html>
