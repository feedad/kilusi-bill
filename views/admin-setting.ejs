    <script>
        // Handle mobile sidebar
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        
        if (sidebarToggle && sidebar) {
            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('show');
            });
            
            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                const isClickInside = sidebar.contains(event.target) || sidebarToggle.contains(event.target);
                if (!isClickInside && sidebar.classList.contains('show')) {
                    sidebar.classList.remove('show');
                }
            });
        }

        // App Mode selector handler
        const appModeSelect = document.getElementById('appModeSelect');
        if (appModeSelect) {
            appModeSelect.addEventListener('change', function() {
                const mode = this.value;
                const descDiv = document.getElementById('modeDescription');
                if (mode === 'radius') {
                    descDiv.innerHTML = `
                        <strong>Mode RADIUS:</strong> Aplikasi akan menggunakan RADIUS server untuk autentikasi PPPoE. 
                        Menu sidebar akan menampilkan RADIUS PPPoE User dan menyembunyikan menu MikroTik API.
                        Cocok untuk multi-NAS atau banyak router.
                    `;
                } else {
                    descDiv.innerHTML = `
                        <strong>Mode API:</strong> Aplikasi akan berkomunikasi langsung dengan MikroTik RouterOS API. 
                        Menu sidebar akan menampilkan menu MikroTik lengkap.
                        Cocok untuk single router atau kontrol penuh MikroTik.
                    `;
                }
            });
        }
    </script>
