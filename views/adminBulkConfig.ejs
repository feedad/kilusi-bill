<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/widgets.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .main-container {
            padding: 20px;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
        }
        
        .card-header {
            background: linear-gradient(135deg, #4361ee 0%, #3f37c9 100%);
            color: white;
            border-radius: 15px 15px 0 0 !important;
            padding: 20px;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #4361ee 0%, #3f37c9 100%);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(67, 97, 238, 0.3);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #06d6a0 0%, #118ab2 100%);
            border: none;
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #ffd60a 0%, #ff8500 100%);
            border: none;
            color: white;
        }
        
        .form-control, .form-select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #4361ee;
            box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.25);
        }
        
        .result-container {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            background: #f8f9fa;
        }
        
        .result-item {
            padding: 10px;
            margin: 5px 0;
            border-radius: 5px;
            border-left: 4px solid #dee2e6;
        }
        
        .result-success {
            background: #d1eddf;
            border-left-color: #28a745;
        }
        
        .result-error {
            background: #f8d7da;
            border-left-color: #dc3545;
        }
        
        /* Use global stats-card styles from /css/widgets.css */
        
        .progress-container {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin: 15px 0;
            display: none;
        }
        
        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }
        
        @media (max-width: 768px) {
            .main-container {
                padding: 10px;
            }
            
            .card {
                margin-bottom: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid main-container">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="mb-1"><i class="bi bi-gear-wide-connected"></i> Bulk Configuration - Konfigurasi Massal ONU</h2>
                                <p class="mb-0">Kelola banyak ONU sekaligus dengan efisien</p>
                            </div>
                            <div>
                                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm">
                                    <i class="bi bi-arrow-left"></i> Kembali ke Dashboard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bulk WiFi Configuration -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-wifi"></i> Bulk WiFi Configuration</h5>
                        <small>Ubah SSID dan/atau password WiFi untuk banyak ONU sekaligus</small>
                    </div>
                    <div class="card-body">
                        <form id="bulkWifiForm">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerNumbers" class="form-label fw-bold">
                                            <i class="bi bi-people"></i> Nomor Pelanggan
                                        </label>
                                        <textarea class="form-control" id="customerNumbers" name="customerNumbers" rows="8" 
                                                placeholder="Masukkan nomor pelanggan (satu per baris)&#10;Contoh:&#10;081234567890&#10;081234567891&#10;081234567892" required></textarea>
                                        <div class="form-text">Masukkan satu nomor per baris. Maksimal 50 nomor per batch.</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="wifiOperation" class="form-label fw-bold">
                                            <i class="bi bi-gear"></i> Operasi
                                        </label>
                                        <select class="form-select" id="wifiOperation" name="operation" required>
                                            <option value="">Pilih Operasi</option>
                                            <option value="ssid_only">Ubah SSID Saja</option>
                                            <option value="password_only">Ubah Password Saja</option>
                                            <option value="both">Ubah SSID dan Password</option>
                                        </select>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="newSSID" class="form-label fw-bold">
                                            <i class="bi bi-broadcast"></i> SSID Baru
                                        </label>
                                        <input type="text" class="form-control" id="newSSID" name="newSSID" 
                                               placeholder="Contoh: MyWiFi" maxlength="32">
                                        <div class="form-text">Kosongkan jika tidak ingin mengubah SSID. Untuk 5GHz akan otomatis ditambah "_5G"</div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label fw-bold">
                                            <i class="bi bi-shield-lock"></i> Password Baru
                                        </label>
                                        <input type="text" class="form-control" id="newPassword" name="newPassword" 
                                               placeholder="Minimal 8 karakter" minlength="8" maxlength="64">
                                        <div class="form-text">Kosongkan jika tidak ingin mengubah password</div>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary w-100" id="bulkWifiBtn">
                                        <i class="bi bi-play-circle"></i> Mulai Bulk WiFi Configuration
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bulk WAN Activation -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-globe"></i> Bulk WAN Activation</h5>
                        <small>Aktifkan WAN ONU yang di-disable oleh provider (khususnya FiberHome)</small>
                    </div>
                    <div class="card-body">
                        <form id="bulkWanForm">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="wanCustomerNumbers" class="form-label fw-bold">
                                            <i class="bi bi-people"></i> Nomor Pelanggan
                                        </label>
                                        <textarea class="form-control" id="wanCustomerNumbers" name="customerNumbers" rows="8" 
                                                placeholder="Masukkan nomor pelanggan (satu per baris)&#10;Contoh:&#10;081234567890&#10;081234567891&#10;081234567892" required></textarea>
                                        <div class="form-text">Masukkan satu nomor per baris untuk ONU yang akan diaktifkan WAN-nya</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="connectionType" class="form-label fw-bold">
                                            <i class="bi bi-diagram-3"></i> Connection Type
                                        </label>
                                        <select class="form-select" id="connectionType" name="connectionType">
                                            <option value="IP_Routed">IP_Routed (Default)</option>
                                            <option value="IP_Bridged">IP_Bridged</option>
                                            <option value="PPPoE_Bridged">PPPoE_Bridged</option>
                                        </select>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="addressingType" class="form-label fw-bold">
                                            <i class="bi bi-router"></i> Addressing Type
                                        </label>
                                        <select class="form-select" id="addressingType" name="addressingType">
                                            <option value="DHCP">DHCP (Default)</option>
                                            <option value="Static">Static IP</option>
                                        </select>
                                    </div>
                                    
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i>
                                        <strong>Info:</strong> Fitur ini khusus untuk mengaktifkan WAN ONU yang di-disable oleh provider. 
                                        Terutama efektif untuk ONU FiberHome yang sering di-disable WAN-nya.
                                    </div>
                                    
                                    <button type="submit" class="btn btn-success w-100" id="bulkWanBtn">
                                        <i class="bi bi-power"></i> Mulai WAN Activation
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress Section -->
        <div class="row">
            <div class="col-12">
                <div class="progress-container" id="progressContainer">
                    <h6><i class="bi bi-hourglass-split"></i> Progress Operasi</h6>
                    <div class="progress mb-3">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" 
                             id="progressBar" role="progressbar" style="width: 0%"></div>
                    </div>
                    <div id="progressText">Memulai operasi...</div>
                </div>
            </div>
        </div>

        <!-- Results Section -->
        <div class="row">
            <div class="col-12">
                <div class="card" id="resultsCard" style="display: none;">
                    <div class="card-header">
                        <h5><i class="bi bi-clipboard-data"></i> Hasil Operasi</h5>
                    </div>
                    <div class="card-body">
                        <div class="row" id="statsRow">
                            <!-- Stats akan diisi melalui JavaScript -->
                        </div>
                        
                        <div class="result-container" id="resultContainer">
                            <!-- Results akan diisi melalui JavaScript -->
                        </div>
                        
                        <div class="mt-3">
                            <button class="btn btn-secondary" onclick="clearResults()">
                                <i class="bi bi-trash"></i> Clear Results
                            </button>
                            <button class="btn btn-primary" onclick="exportResults()">
                                <i class="bi bi-download"></i> Export to CSV
                            </button>
                            <a href="/admin/dashboard" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Kembali ke Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        let currentResults = [];
        
        // Bulk WiFi Form Handler
        document.getElementById('bulkWifiForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const operation = formData.get('operation');
            const newSSID = formData.get('newSSID');
            const newPassword = formData.get('newPassword');
            
            // Validation
            if ((operation === 'ssid_only' || operation === 'both') && !newSSID) {
                alert('SSID baru harus diisi untuk operasi yang dipilih');
                return;
            }
            
            if ((operation === 'password_only' || operation === 'both') && !newPassword) {
                alert('Password baru harus diisi untuk operasi yang dipilih');
                return;
            }
            
            const customerNumbers = formData.get('customerNumbers').trim();
            const numbers = customerNumbers.split('\\n').filter(n => n.trim().length > 0);
            
            if (numbers.length > 50) {
                alert('Maksimal 50 nomor per batch. Silakan bagi menjadi beberapa batch.');
                return;
            }
            
            await executeOperation('/admin/bulk-config/bulk-wifi', formData, 'WiFi Configuration');
        });
        
        // Bulk WAN Form Handler
        document.getElementById('bulkWanForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const customerNumbers = formData.get('customerNumbers').trim();
            const numbers = customerNumbers.split('\\n').filter(n => n.trim().length > 0);
            
            if (numbers.length > 30) {
                alert('Maksimal 30 nomor per batch untuk WAN activation. Silakan bagi menjadi beberapa batch.');
                return;
            }
            
            // Prepare WAN config
            const wanConfig = {
                connectionType: formData.get('connectionType'),
                addressingType: formData.get('addressingType')
            };
            
            const extendedFormData = new FormData();
            extendedFormData.append('customerNumbers', customerNumbers);
            extendedFormData.append('wanConfig', JSON.stringify(wanConfig));
            
            await executeOperation('/admin/bulk-config/bulk-wan', extendedFormData, 'WAN Activation');
        });
        
        // Execute Operation
        async function executeOperation(url, formData, operationType) {
            const progressContainer = document.getElementById('progressContainer');
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            const resultsCard = document.getElementById('resultsCard');
            
            // Show progress
            progressContainer.style.display = 'block';
            resultsCard.style.display = 'none';
            progressBar.style.width = '10%';
            progressText.textContent = `Memulai ${operationType}...`;
            
            // Disable buttons
            document.getElementById('bulkWifiBtn').disabled = true;
            document.getElementById('bulkWanBtn').disabled = true;
            
            try {
                progressBar.style.width = '30%';
                progressText.textContent = `Mengirim request ${operationType}...`;
                
                const response = await fetch(url, {
                    method: 'POST',
                    body: formData
                });
                
                progressBar.style.width = '70%';
                progressText.textContent = 'Memproses response...';
                
                const result = await response.json();
                
                progressBar.style.width = '100%';
                progressText.textContent = 'Operasi selesai!';
                
                // Show results
                displayResults(result, operationType);
                
                setTimeout(() => {
                    progressContainer.style.display = 'none';
                }, 2000);
                
            } catch (error) {
                console.error('Error:', error);
                progressText.textContent = 'Error: ' + error.message;
                progressBar.style.width = '100%';
                progressBar.classList.add('bg-danger');
                
                setTimeout(() => {
                    progressContainer.style.display = 'none';
                    progressBar.classList.remove('bg-danger');
                }, 3000);
            } finally {
                // Re-enable buttons
                document.getElementById('bulkWifiBtn').disabled = false;
                document.getElementById('bulkWanBtn').disabled = false;
            }
        }
        
        // Display Results
        function displayResults(result, operationType) {
            const resultsCard = document.getElementById('resultsCard');
            const statsRow = document.getElementById('statsRow');
            const resultContainer = document.getElementById('resultContainer');
            
            currentResults = result.results || [];
            
            // Show results card
            resultsCard.style.display = 'block';
            
            // Create stats
            const stats = result.stats || {};
            statsRow.innerHTML = `
                <div class="col-md-3">
                    <div class="stats-card primary text-center">
                        <h4>${stats.total || 0}</h4>
                        <small>Total Processed</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card success text-center">
                        <h4>${stats.success || 0}</h4>
                        <small>Success</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card danger text-center">
                        <h4>${stats.failed || 0}</h4>
                        <small>Failed</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card warning text-center">
                        <h4>${stats.executionTime || 0}ms</h4>
                        <small>Execution Time</small>
                    </div>
                </div>
            `;
            
            // Create results list
            let resultsHtml = `<h6>Detail Hasil ${operationType}:</h6>`;
            
            if (currentResults.length > 0) {
                currentResults.forEach((item, index) => {
                    const statusClass = item.success ? 'result-success' : 'result-error';
                    const statusIcon = item.success ? 'bi-check-circle-fill text-success' : 'bi-x-circle-fill text-danger';
                    
                    resultsHtml += `
                        <div class="result-item ${statusClass}">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong><i class="${statusIcon}"></i> ${item.customerNumber}</strong>
                                    <div class="small mt-1">${item.message}</div>
                                    ${item.deviceId !== 'N/A' ? `<div class="small text-muted">Device: ${item.deviceId}</div>` : ''}
                                </div>
                                <span class="badge ${item.success ? 'bg-success' : 'bg-danger'}">${item.success ? 'SUCCESS' : 'FAILED'}</span>
                            </div>
                        </div>
                    `;
                });
            } else {
                resultsHtml += '<div class="text-center text-muted">Tidak ada hasil untuk ditampilkan</div>';
            }
            
            resultContainer.innerHTML = resultsHtml;
        }
        
        // Clear Results
        function clearResults() {
            const resultsCard = document.getElementById('resultsCard');
            resultsCard.style.display = 'none';
            currentResults = [];
        }
        
        // Export Results to CSV
        function exportResults() {
            if (currentResults.length === 0) {
                alert('Tidak ada data untuk diekspor');
                return;
            }
            
            const headers = ['Customer Number', 'Status', 'Message', 'Device ID'];
            const csvContent = [
                headers.join(','),
                ...currentResults.map(item => [
                    item.customerNumber,
                    item.success ? 'SUCCESS' : 'FAILED',
                    `"${item.message.replace(/"/g, '""')}"`,
                    item.deviceId || 'N/A'
                ].join(','))
            ].join('\\n');
            
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', `bulk_config_results_${new Date().toISOString().slice(0,10)}.csv`);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        // Form validation helpers
        document.getElementById('wifiOperation').addEventListener('change', function() {
            const operation = this.value;
            const ssidInput = document.getElementById('newSSID');
            const passwordInput = document.getElementById('newPassword');
            
            if (operation === 'ssid_only') {
                ssidInput.required = true;
                passwordInput.required = false;
            } else if (operation === 'password_only') {
                ssidInput.required = false;
                passwordInput.required = true;
            } else if (operation === 'both') {
                ssidInput.required = true;
                passwordInput.required = true;
            } else {
                ssidInput.required = false;
                passwordInput.required = false;
            }
        });
    </script>
</body>
</html>