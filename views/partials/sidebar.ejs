    <li class="mt-3 mb-1"><span class="text-muted small text-uppercase">Network Monitoring</span></li>
    <li>
      <a href="/admin/analytics" class="nav-link <%= page === 'analytics' ? 'active' : 'link-dark' %>">
        <i class="bi bi-graph-up"></i> Analytics
      </a>
    </li>

