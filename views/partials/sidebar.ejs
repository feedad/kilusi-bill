<!-- Sidebar Admin -->
<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 250px; min-height: 100vh;">
  <a href="/admin/dashboard" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
    <span class="fs-4">Admin Panel</span>
  </a>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
    <!-- Overview -->
    <li class="mt-2 mb-1"><span class="text-muted small text-uppercase">Overview</span></li>
    <li class="nav-item">
      <a href="/admin/dashboard" class="nav-link <%= page === 'dashboard' ? 'active' : 'link-dark' %>">
        <i class="bi bi-speedometer2"></i> Dashboard
      </a>
    </li>

    <!-- Billing & Finance -->
    <li class="mt-3 mb-1"><span class="text-muted small text-uppercase">Billing & Finance</span></li>
    <li>
      <a href="/admin/billing" class="nav-link <%= page === 'billing' ? 'active' : 'link-dark' %>">
        <i class="bi bi-receipt"></i> Billing & Invoice
      </a>
    </li>

    <!-- User Management -->
    <li class="mt-3 mb-1"><span class="text-muted small text-uppercase">User Management</span></li>
    <li>
      <a href="/admin/customers" class="nav-link <%= page === 'customers' ? 'active' : 'link-dark' %>">
        <i class="bi bi-people"></i> Data Pelanggan
      </a>
    </li>
    <% if (typeof settings !== 'undefined' && settings.app_mode === 'radius') { %>
    <li>
      <a href="/admin/radius/users-page" class="nav-link <%= page === 'radius-users' ? 'active' : 'link-dark' %>">
        <i class="bi bi-person-badge"></i> PPPoE Users (RADIUS)
      </a>
    </li>
    <% } %>

    <!-- Support -->
    <li class="mt-3 mb-1"><span class="text-muted small text-uppercase">Support</span></li>
    <li>
      <a href="/admin/trouble" class="nav-link <%= page === 'trouble' ? 'active' : 'link-dark' %>">
        <i class="bi bi-exclamation-triangle"></i> Laporan Gangguan
      </a>
    </li>

    <!-- Authentication -->
    <% if (typeof settings !== 'undefined' && settings.app_mode === 'radius') { %>
    <li class="mt-3 mb-1"><span class="text-muted small text-uppercase">Authentication</span></li>
    <li>
      <a href="/admin/radius" class="nav-link <%= page === 'radius' ? 'active' : 'link-dark' %>">
        <i class="bi bi-shield-lock"></i> RADIUS Server
      </a>
    </li>
    <% } %>

    <!-- Device Management -->
    <li class="mt-3 mb-1"><span class="text-muted small text-uppercase">Device Management</span></li>
    <% if (typeof settings !== 'undefined' && settings.app_mode === 'api') { %>
    <li>
      <a href="/admin/mikrotik" class="nav-link <%= page === 'mikrotik' ? 'active' : 'link-dark' %>">
        <i class="bi bi-router"></i> MikroTik
      </a>
    </li>
    <% } %>
    <li>
      <a href="/admin/genieacs" class="nav-link <%= page === 'genieacs' ? 'active' : 'link-dark' %>">
        <i class="bi bi-hdd-network"></i> GenieACS (ONU)
