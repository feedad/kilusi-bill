      </a>
    </li>
    <li>
      <a href="/admin/setting" class="nav-link <%= page === 'setting' ? 'active' : 'link-dark' %>">
        <i class="bi bi-gear"></i> Settings
      </a>
    </li>

    <!-- Developer -->
    <li class="mt-3 mb-1"><span class="text-muted small text-uppercase">Developer</span></li>
    <li>
      <a href="/api-docs" target="_blank" class="nav-link <%= page === 'api' ? 'active' : 'link-dark' %>">
        <i class="bi bi-code-slash"></i> API Docs
      </a>
    </li>
    <li>
      <a href="/mobile" target="_blank" class="nav-link <%= page === 'mobile' ? 'active' : 'link-dark' %>">
        <i class="bi bi-phone"></i> Mobile App
      </a>
    </li>

