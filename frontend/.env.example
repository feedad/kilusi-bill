# ===========================================
# Kilusi Bill Frontend - Environment Configuration
# ===========================================
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Application Configuration
NEXT_PUBLIC_APP_NAME=Kilusi Bill
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_COMPANY_NAME=Your ISP Company

# Map Configuration (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# External Services (Optional)
NEXT_PUBLIC_GENIEACS_URL=http://your-genieacs-server:7557
NEXT_PUBLIC_WHATSAPP_NUMBER=628XXXXXXXXXX

# Development
NEXT_PUBLIC_DEV_MODE=true